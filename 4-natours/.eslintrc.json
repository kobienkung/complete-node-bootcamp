{
  // eslint is rules about writing colde
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "spaced-comment": "off",
    "no-console": "warn", // warning if there is console.log
    "consistent-return": "off", // every functions should return something
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }] // should not have unused declared variables except req|res|next|val
  }
  // "node/no-unsupported-features/es-syntax": [
  //   "error",
  //   {
  //     "version": ">=8.0.0",
  //     "ignores": []
  //   }
  // ]
}
